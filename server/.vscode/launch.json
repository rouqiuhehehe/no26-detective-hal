{
    // 使用 IntelliSense 了解相关属性。
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "args": ["-w", "-u", "bdd", "--no-timeouts", "--colors", "${workspaceFolder}/test/**/*.spec.ts"],
            "runtimeArgs": ["--nolazy", "-r", "${workspaceFolder}/bin.js"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "internalConsoleOptions": "neverOpen",
            "name": "Mocha Tests",
            "request": "launch",
            "skipFiles": ["<node_internals>/**"],
            "runtimeExecutable": null,
            "type": "node"
        },
        {
            "name": "TS-node-lauch",
            "type": "node",
            "request": "launch",
            "args": ["${workspaceFolder}/src/app.ts"],
            "runtimeArgs": ["--nolazy", "-r", "${workspaceFolder}/bin.js"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "env": {
                "NODE_ENV": "development",
                "NODE_RUN": "dev"
            }
        },
        {
            "name": "Attach to node",
            "type": "node",
            "sourceMaps": true,
            "port": 5669,
            "request": "attach",
            "restart": true,
            "processId": "${command:PickProcess}",
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}
