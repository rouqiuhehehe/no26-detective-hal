<style>
    .menu {
        position: absolute;
        top: 15px;
        right: 20px;
        font-size: 16px;
        color: #888;
    }

    .menu .name::after {
        content: ' -';
    }

    .menu a {
        text-decoration: none;
        margin-left: 5px;
        color: #08c;
    }
</style>

<% if (locals.user) { %>
<div class="menu">
    <span class="name"><%= user.username %> </span>
    <a href="/admin/student?name=<%= user.username %>  ">admin</a>
    <a href="/arctiles">arctiles</a>
    <a href="/admin/upload/img">upload</a>
    <a href="/ejs/post/view?title=<%= user.username %>&name=<%= user.username %>  ">post</a>
    <a href="javascript:;" class="logout">logout</a>
</div>
<% } else { %>
<div class="menu">
    <a href="/login">login</a>
    <a href="/register">register</a>
</div>
<% } %>

<script>
    document.getElementsByClassName('logout')[0]?.addEventListener('click', (e) => {
        e.preventDefault();
        if (window.confirm('do you want to logout?')) {
            window.location.href = '/logout';
        }
    });
</script>
